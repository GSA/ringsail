<div class="row">
  <div class="span10">
    <% if @goto == 'review' %>
    <h3>Review entries in this registry</h3>
    <% else %>
    <h3>Edit or update entries in this registry</h3>
    <% end %>
    <p>If you have a .gov or .mil email address, you can edit or update entries in this registry.</p>
    <p>Enter your .gov or .mil email address and phone number below, and we will send you a link that will allow editing access for <strong>24 hours</strong> from the time the email is sent.</p>

    <%= form_tag({:action => "create"}, :class => "form-stacked") do %>

      <% if flash[:alert] %>
      <div class="alert-error">
        <%= render 'shared/error_messages', :object => @auth_token %>
      </div>
      <% end %>

      <label for="email">Email:</label>
      <div class="input">
        <%= text_field_tag('email', @auth_token.email, :class => "span5") %>
      </div>

      <label for="phone">Phone:</label>
      <div class="input">
        <%= text_field_tag('phone', @auth_token.phone, :class => "span5") %>
      </div>
    
      <% if @goto %>
      <%= hidden_field_tag('goto', @goto) %>
      <% end %>
      <input type="submit" class="btn btn-primary" value="Submit">
    <% end %>
  </div>
</div>