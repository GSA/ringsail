<h1>Dashboard</h1>
<div class="col-sm-3 col-md-2 sidebar">
	<%= render partial: "sidebar" %>
</div>
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <h1 class="page-header">Social Media Breakdown</h1>
  <div class="row placeholders">
	<div class="col-sm-12">
	  	<h2>Media Breakdowns</h2>
	  	<% largest = 0 %>
	  	<% @social_media_breakdowns.each do |key, value| %>
	  		<% largest = value if value > largest %>
	  		<% color = ["progress-bar-success", "progress-bar-info", "progress-bar-warning", "progress-bardanger"].sample %>
	  		<% service = Service.find_by_shortname(key) %>
	  		<h3><%= service ? service.longname : key %> Service (<%= value %> accounts)</h3>
	  		<div class="progress">
			  <div class="progress-bar <%= color %>" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: <%= value.to_f / largest * 100%>%">
			    <span class="sr-only"><%= @value %> accounts</span>
			  </div>
			</div>
		<% end %>
	</div>
</div>