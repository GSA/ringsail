<div class="col-sm-12 col-md-12 main">
  <h1 class="page-header">Social Media Accounts</h1>
  <div class="row placeholders">
    <div class="col-sm-2">
      <ul>
        <li><%= link_to "All", admin_outlets_path %></li>
        <% @services.each do |service| %>
          <li><%= link_to service.longname.titleize, admin_outlets_path(service: service.shortname) %></li>
        <% end %>
    </div>
    <div class="col-sm-10">
      <%= paginate @outlets %>
    	<table class="table table-striped">
    		<thead>
          <tr class = "outlet_row">
            <th>Service</th>
            <th>Service URL</th>
            <th>Account</th>
            <th>Organization</th>
            <th>Updated at</th>
            <th>Tags</th>
            <th>Actions</th>
      		</tr>
        </thead>

        <tbody>
      		<% @outlets.each do |outlet| %>
      			<tr class = "outlet_row">
      				<td><%= outlet.service %></td>
              <td><%= outlet.service_url %></td>
      				<td><%= outlet.account %></td>
              <td><%= outlet.organization %></td>
              <td><%= outlet.updated_at.strftime("%B %e, %Y %H:%M") %></td>
              <td><%= outlet.tags[1] %></td>
              <td>
                <ul>
                  <li><%= link_to "Show", admin_outlet_path(outlet) %> </li>
                  <li><%= link_to "Edit", edit_admin_outlet_path(outlet) %></li>
                  <li><%= link_to "Delete", admin_outlet_path(outlet), method: :delete, confirm: 'Are you certain you want to delete this?'%></li>
                  <li><%= link_to "History", history_admin_outlet_path(outlet) %></li>
                </ul>
              </td>   
      			</tr>
      		<% end %>
        </tbody>
    	</table>
      <%= paginate @outlets %>
    </div>
  </div>
</div>