<div class="row">
  <div class="col-sm-12 col-md-12 main">
    <h1 class="page-header">Social Media Accounts</h1>
      <div class="row placeholders">
        <div class="col-sm-2 verticalTabsWrap">
          <div class="list-group">
            <%= link_to admin_outlets_path, {class: "list-group-item #{"active" if params[:service].nil? }"} do %>
              All
              <span class="count pull-right"><%= @outs.count %></span>
            <%end%>
            <% @services.each do |key, value| %>
              <%= link_to admin_outlets_path(service: key), {class: "list-group-item #{"active" if key==params[:service]}"} do %>
                <%= key %>
                <span class="count pull-right"><%= value %></span>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="col-sm-10 tbldisplay">
          <p>
            <%= paginate @outlets %>
            <text>
              Download: <%= link_to "CSV", admin_outlets_path(format: "csv") %> 
            </text>
          </p>
          <table class="table table-striped">
          <thead>
          <tr>
            <th>Agency</th>
            <th>Service</th>
            <th>Social Media Account</th>
            <th>Tags</th>
            <th>Status</th>
            <th>Updated at</th>
            <th class = "lastlinks">Actions</th>
          </tr>
          </thead>

          <tbody>
          <% @outlets.each do |outlet| %>
          	<tr class = "tablerow">
              <td class = "table_data"><%= outlet.agencies.map(&:name).join(', ').upcase%>
          		<td class = "table_data"><%= outlet.service %></td>
              <td class = "table_data"><%= link_to outlet.organization, outlet.service_url, {target: "_blank"} %></td>
              <td class = "table_data"><%= outlet.tags.map(&:to_s).join(', ')%></td>
              <td class="table_data"><%= outlet.status.titleize %></td>
              <td class = "table_data"><%= outlet.updated_at.strftime("%B %e, %Y %H:%M") %></td>
              <td class = "table_data lastlinks">
                <%= link_to admin_outlet_path(outlet) do %> <i class = "glyphicon glyphicon-info-sign"></i> <% end %>
                <%= link_to edit_admin_outlet_path(outlet) do %> <i class = "glyphicon glyphicon-pencil"></i> <% end %>
                <%= link_to history_admin_outlet_path(outlet) do %><i class = "glyphicon glyphicon-book"></i> <% end %> 
                <%= link_to admin_outlet_path(outlet), method: :delete, :class => "delete", confirm: 'Are you certain you want to delete this?' do %><i class = "glyphicon glyphicon-remove"></i> <% end %> 
              </td>   
          	</tr>
          <% end %>
          </tbody>
          </table>
          <p>
          <text>
              Download: <%= link_to "CSV", admin_outlets_path(format: "csv") %> 
            </text>
            <%= paginate @outlets %>
          </p>
        </div>
    </div>
  </div>
</div>