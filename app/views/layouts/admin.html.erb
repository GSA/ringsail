<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="author" content="">
	<link rel="icon" href="../../favicon.ico">

	<title>Mobile &amp; Social Media Registry</title>

	<!-- Bootstrap core CSS -->
	<%= stylesheet_link_tag    'admin', media: 'all' %>
  	<%= csrf_meta_tags %>

	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!--[if lt IE 9]>
	  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
	  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
</head>
<body>
	<nav class="navbar navbar-inverse navbar-fixed-top">
	  <div class="container-fluid">
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <a class="navbar-brand" href="/admin/">Mobile &amp; Social Media Registry</a>
	    </div>
	    <div id="navbar" class="navbar-collapse collapse">
	      <ul class="nav navbar-nav navbar-right">
	        <li class=" dropdown <%= "active" if request.path == "/admin" || request.original_url.include?("admin/dashboards") %>"><a href="#" class = "dropdown-toggle" data-toggle = "dropdown" aria-expanded = "false">Dashboard <span class = "caret"></span></a>
	        	<ul class="dropdown-menu" role="menu">

    				<li class="<%= "active" if request.path == "/admin" %>"><a href="/admin/">Overview </a></li>
		            <li class="<%= "active" if request.path == "/admin/dashboards/social_media_breakdown" %>"><a href="/admin/dashboards/social_media_breakdown">Social Media Breakdown</a></li>
    				<li class="<%= "active" if request.path == "/admin/dashboards/activities" %>"><%= link_to "System Activity", activities_admin_dashboards_path %></li>
		        </ul>
	        </li>
	        <li class="<%= "active" if request.original_url.include? "admin/outlets" %>"><a href="#" class = "dropdown-toggle" data-toggle = "dropdown" aria-expanded = "false">Social Media <span class = "caret"></span></a>
	        	<ul class="dropdown-menu" role="menu">
		            <li><%= link_to "Accounts List", admin_outlets_path %></li>
		            <li><%= link_to "Account Activity", activities_admin_outlets_path %></li>
		            <li><%= link_to "Add an Account", new_admin_outlet_path %></li>
		        </ul>
	        </li>

	        <li><a href="#">Mobile Apps</a></li>
	         <li class = "<%= "active" if request.original_url.include? "admin/agencies" %>"><a href="#" class = "dropdown-toggle" data-toggle = "dropdown" aria-expanded = "false">Agencies<span class = "caret"></span></a>
	        	<ul class="dropdown-menu" role="menu">
		            <li><a href="agencies">Accounts List</a></li>
		            <li><a href="agencies/new">Add an Account</a></li>
		        </ul>
	        </li>
	        <li><%= link_to "Users", admin_users_path %></li>
	        <li><%= link_to "Profile: #{current_user.email}", edit_admin_user_path(current_user) %></li>
	      </ul>
	    </div>
	  </div>
	</nav>
	<div class="container-fluid">
     	<%= yield %>
    </div>
    <%= javascript_include_tag 'admin' %>
  	<%= yield :additional_javascript %>
</body>
</html>