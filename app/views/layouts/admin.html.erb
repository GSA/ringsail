<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="">
	<meta name="author" content="">
	<link rel="icon" href="../../favicon.ico">

	<title>Social &amp; Mobile Registry</title>

	<!-- Bootstrap core CSS -->
	<%= stylesheet_link_tag    'admin', media: 'all' %>
  	<%= csrf_meta_tags %>

	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!--[if lt IE 9]>
	  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
	  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
</head>
<body>
	<nav class="navbar navbar-inverse navbar-fixed-top">
	  <div class="container-fluid">
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
            <a class="navbar-brand brandImg" href="#"></a>
	    </div>
	    <div id="navbar" class="navbar-collapse collapse">
	      <ul class="nav navbar-nav navbar-right">
	        <li class="<%= "active" if request.path == "/admin" %>"><a href="/admin/">DASHBOARD </a></li>
	         	<ul class="dropdown-menu" role="menu">

    				<li class="<%= "active" if request.path == "/admin" %>"><a href="/admin/">Overview </a></li>
		            <li class="<%= "active" if request.path == "/admin/dashboards/social_media_breakdown" %>"><a href="/admin/dashboards/social_media_breakdown">Social Media Breakdown</a></li>
    				<li class="<%= "active" if request.path == "/admin/dashboards/activities" %>"><%= link_to "System Activity", activities_admin_dashboards_path %></li>
		        </ul> 
	        <li class="<%= "active" if request.original_url.include? "admin/outlets" %>"><a href="#" class = "dropdown-toggle" data-toggle = "dropdown" aria-expanded = "false">Social Media <span class = "caret"></span></a>
	        	<ul class="dropdown-menu" role="menu">
		            <li><%= link_to "Accounts List", admin_outlets_path %></li>
		            <li><%= link_to "Account Activity", activities_admin_outlets_path %></li>
		            <li><%= link_to "Add an Account", new_admin_outlet_path %></li>
		        </ul>
	        </li>

	        <li class = "<%= "active" if request.original_url.include? "admin/mobile_apps" %>"><a href="#" class = "dropdown-toggle" data-toggle = "dropdown" aria-expanded = "false">Mobile Apps<span class = "caret"></span></a>
	        	<ul class="dropdown-menu" role="menu">
	        			<li role="presentation" class="dropdown-header">Mobile Apps</li>
		            <li><%= link_to "Mobile Apps List", admin_mobile_apps_path %> </li>
		            <li><%= link_to "Mobile Apps Activity", activities_admin_mobile_apps_path %></li>
		            <li><%= link_to "Add a Mobile App", new_admin_mobile_app_path %></li>
		            <li role="presentation" class="dropdown-header">Galleries</li>
		            <li><%= link_to "Galleries List", admin_galleries_path %> </li>
		            <li><%= link_to "Galleries Activity", activities_admin_galleries_path %></li>
		            <li><%= link_to "Add a Gallery", new_admin_gallery_path %></li>
		        </ul>
	        </li>



	        <li class = "<%= "active" if request.original_url.include? "admin/agencies" %>"><a href="#" class = "dropdown-toggle" data-toggle = "dropdown" aria-expanded = "false">Agencies<span class = "caret"></span></a>
	        	<ul class="dropdown-menu" role="menu">
		            <li><%= link_to "Agencies List", admin_agencies_path %> </li>
		            <li><%= link_to "Add an Agency", new_admin_agency_path %></li>
		        </ul>
	        </li>
	        <li><%= link_to "Users", admin_users_path %></li>
	        <li><a href="#" class = "dropdown-toggle" data-toggle = "dropdown" aria-expanded = "false"><%= current_user.email %><span class = "caret"></span></a>
	        	<ul class="dropdown-menu" role="menu">
		            <li><%= link_to "Profile", edit_admin_user_path(current_user) %></li>
		            <li><%= link_to "About Application", admin_about_path %></li>
		            <li><%= link_to "Logout", destroy_user_session_path %></li>
		        </ul>
	        </li>
	      </ul>
	    </div>
	  </div>
	</nav>

	<div class="container">
		<% if notice %>
			</br>
  			<p class="alert alert-success"><%= notice %></p>
		<% end %>
		<% if alert %>
			</br>
	 		<p class="alert alert-danger"><%= alert %></p>
		<% end %>
     	<%= yield %>
    </div>
    <%= javascript_include_tag 'admin' %>
  	<%= yield :additional_javascript %>
</body>
</html>